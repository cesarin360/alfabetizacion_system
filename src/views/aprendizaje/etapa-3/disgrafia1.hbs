<script>
    const table = document.getElementById('disgrafia-table');
    const correctLetter = 'd';

    table.addEventListener('click', (event) => {
        const selectedLetter = event.target.innerText;
        if (selectedLetter === correctLetter) {
            event.target.classList.add('correct');
            var synth = window.speechSynthesis;
            var speech = new SpeechSynthesisUtterance(`¡Correcto! La letra seleccionada es "${correctLetter}".`);
            speech.onend = function (event) {
                window.location.replace("/modulos/aprendizaje/etapa-3/ejercicio-12?num=12");
            };
            synth.speak(speech);
        } else {
            var synth = window.speechSynthesis;
            var speech = new SpeechSynthesisUtterance(`Seleccionaste la letra incorrecta. Inténtalo de nuevo.`);
            synth.speak(speech);
        }
    });


</script>